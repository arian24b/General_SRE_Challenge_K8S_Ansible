[masters]
master ansible_host={{ master_ip }} ansible_user=root ansible_ssh_private_key_file=~/.ssh/id_ed25519

[workers]
{% for ip in worker_ips %}
worker{{ loop.index }} ansible_host={{ ip }} ansible_user=root ansible_ssh_private_key_file=~/.ssh/id_ed25519
{% endfor %}

[k8s:children]
masters
workers

[k8s:vars]
ansible_python_interpreter=/usr/bin/python3